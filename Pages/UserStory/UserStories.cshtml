@page
@model UserStoriesModel
@inject UserStoryService service
@{
    ViewData["Title"] = "UserStories";
}
<h1>User Stories</h1>

<tbody>
    <ul>
        @foreach(var userstory in Model.UserStories){
        <div class="card mb-2" style="width: 30rem;">
            <div ="card-header p-2">
                <div>(@userstory.Id) @userstory.Title</div>
            </div>
            <div class="card-body">
                <div>@userstory.Description</div>
            </div>
            <div class="card-footer">
                <a class="btn" type="button" asp-page="/UserStory/CreateUserStory"><i class="fa fa-plus"></i></a>
                <a class="btn" type="button" asp-page="/UserStory/DeleteUserStory" asp-route-id="@userstory.Id"><i class="fa fa-trash"></i></a>
                <a class="btn" type="button" asp-page="/UserStory/UserStoryDetail" asp-route-id="@userstory.Id"><i class="fa fa-info-circle"></i></a>
            </div>
            @*<button id="myModelBtn" class="btn" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-info-circle"></i>
            </button>*@
        </div>
        }
    </ul>
</tbody>
